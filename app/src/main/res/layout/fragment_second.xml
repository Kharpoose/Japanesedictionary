<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <EditText
        android:id="@+id/editTxtSearch2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="タップして入力 ..."
        android:textColor="#000000"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="70dp"
        android:backgroundTint="#FF0000"
        android:baselineAligned="false"
        android:text="探す"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        android:theme="@style/Widget.AppCompat.Button.Colored"
        app:layout_constraintTop_toTopOf="@+id/editTxtSearch2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@id/txtViewResults2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/textview_second"
        app:layout_constraintTop_toBottomOf="@+id/editTxtSearch2"
        app:layout_constraintVertical_bias="0.346"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textview_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do your best!"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button_change"
        android:layout_width="wrap_content"
        android:backgroundTint="#2196F3"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="日本語 - Türkçe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_second" />


</androidx.constraintlayout.widget.ConstraintLayout>